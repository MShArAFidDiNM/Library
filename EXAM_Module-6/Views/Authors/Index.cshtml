@model IEnumerable<EXAM_Module_6.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Authors</h1>
<form asp-controller="Authors" asp-action="Index">
    <p>
        Search name: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<p>
    <a type="button" class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-sortorder="@ViewData["IdSort"]">
                    @Html.DisplayName("Id") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["FullNameSort"]">
                    @Html.DisplayName("FullName") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a asp-route-sortorder="@ViewData["BirthdateSort"]">
                    @Html.DisplayName("Birthdate") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Id)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
         
            </td>
        </tr>
}
    </tbody>
</table>
